---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import StatsGrid from '../components/StatsGrid.astro';
import FeatureSection from '../components/FeatureSection.astro';
import PricingTable from '../components/PricingTable.astro';
import CallToAction from '../components/CallToAction.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout title="Servicios Eléctricos El Rayo - Electricista Autorizado SEC">
	<Hero 
        title="Servicios Eléctricos <br><span class='text-amber-400'>El Rayo</span>"
        subtitle="Llego rápido, cobro lo justo y dejo todo funcionando. Electricista autorizado SEC a domicilio y urgencias."
        bgImage="https://images.unsplash.com/photo-1621905251189-08b45d6a269e?q=80&w=2069&auto=format&fit=crop"
        badgeText="Autorizado SEC"
    />

    <StatsGrid 
        stats={[
            { number: "+10", label: "Años de Experiencia", icon: "fa-solid fa-calendar-check" },
            { number: "+1000", label: "Trabajos Realizados", icon: "fa-solid fa-bolt" },
            { number: "24/7", label: "Urgencias Eléctricas", icon: "fa-solid fa-clock" },
            { number: "SEC", label: "Instalador Autorizado", icon: "fa-solid fa-id-card" }
        ]}
    />

    <FeatureSection 
        title="Servicios Eléctricos Profesionales"
        subtitle="Atiendo en todo Santiago, principalmente en las comunas de Maipú, Pudahuel y Estación Central."
        image="https://images.unsplash.com/photo-1581094794329-cd1096a7a438?q=80&w=2070&auto=format&fit=crop"
        features={[
            "Urgencias eléctricas 24 horas (cortes de luz, fallas)",
            "Cambio de tableros y automáticos",
            "Trámite de certificación TE1 (Anexo 1) para empalmes",
            "Instalaciones domiciliarias seguras"
        ]}
    />

    <FeatureSection 
        title="¿Por qué elegir a El Rayo?"
        subtitle="Compromiso, seguridad y rapidez en cada trabajo eléctrico que realizamos."
        image="https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?q=80&w=2070&auto=format&fit=crop"
        align="right"
        features={[
            "Electricista autorizado SEC",
            "Llego rápido a tu domicilio",
            "Cobro lo justo, sin sorpresas",
            "Dejo todo funcionando perfectamente"
        ]}
    />

    <!-- PricingTable removed as per request -->

    <Testimonials 
        reviews={[
            {
                name: "María González",
                text: "Excelente servicio, Juan llegó muy rápido cuando tuve un corte de luz y solucionó el problema de inmediato.",
                rating: 5,
                location: "Maipú"
            },
            {
                name: "Carlos Tapia",
                text: "Muy profesional. Me ayudó con el trámite TE1 para mi empalme y todo salió perfecto. Precio justo.",
                rating: 5,
                location: "Pudahuel"
            },
            {
                name: "Ana Silva",
                text: "Me salvaron un domingo por la tarde con una falla en el tablero. El técnico fue muy amable y eficiente.",
                rating: 5,
                location: "Estación Central"
            },
        ]}
    </Testimonials>

    <FAQ
        title="Preguntas Frecuentes"
        items={[
            {
                question: "¿Cuál es el tiempo de respuesta?",
                answer: "Para urgencias, nuestro tiempo promedio de llegada es de 30 a 60 minutos dentro de la zona de cobertura."
            },
            {
                question: "¿Dan garantía por los trabajos?",
                answer: "Sí, todos nuestros trabajos cuentan con garantía por escrito. El tiempo depende del tipo de servicio realizado."
            },
            {
                question: "¿Qué medios de pago aceptan?",
                answer: "Aceptamos efectivo, transferencia electrónica y tarjetas de crédito/débito."
            }
        ]}
    />

    <CallToAction 
        title="¿Necesitas un electricista urgente?"
        subtitle="Contáctame ahora y solucionaré tu problema eléctrico. Llego rápido, cobro lo justo."
        ctaText="Contactar por WhatsApp"
        ctaLink="https://wa.me/56987654321"
    />
</Layout>
